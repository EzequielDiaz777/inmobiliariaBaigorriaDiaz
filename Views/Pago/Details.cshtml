@model inmobiliariaBaigorriaDiaz.Models.Pago

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>DETALLE DEL PAGO</b></h1>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.NumeroDePago)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NumeroDePago)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IdContrato)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IdContrato)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Monto)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Monto)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.MesDePago)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MesDePago)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span>Abonado</span>
                            }
                            else
                            {
                                <span>Anulado</span>
                            }
                        </dd>
                        <dd class="col-sm-12"></dd>
                    </dl>
                    <div class="text-center mt-3"> <!-- Agrega margen superior aquÃ­ -->
                        <a href="@Url.Action("Edit", new { id = Model.NumeroDePago })" class="btn btn-primary btn-editar"
                            style="margin-right: 30px;">Editar</a>
                        <button type="button" onclick="window.location.href='@Url.Action("Index", "Pago")'"
                            class="btn btn-outline-warning" style="font-weight: bold; border-width: 2px;"> Volver a la
                            Lista</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>