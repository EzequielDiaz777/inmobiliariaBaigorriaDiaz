<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria Baigorria-Diaz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/inmobiliariaBaigorriaDiaz.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="container-fluid navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="mx-3">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><u>Inmobiliaria Baigorria&Diaz</u></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse container-fluid collapse d-sm-inline-flex">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Propietario"
                            asp-action="Index">Propietarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Inquilino"
                            asp-action="Index">Inquilinos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="TipoDeInmueble"
                            asp-action="Index">Tipo de inmuebles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="UsoDeInmueble"
                            asp-action="Index">Uso de inmuebles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Inmueble"
                            asp-action="Index">Inmuebles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Contrato"
                            asp-action="Index">Contratos</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="">
                @if (ViewBag.Id != null)
                {
                    <div id="alertMessage" class="alert alert-primary alert-dismissible fade show fadeOut" role="alert">
                        <strong>¡Éxito!</strong> Datos Guardados Correctamente!
                        <button type="button" class ="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&#x2714;</span>
                        </button>
                    </div>
                    <script>
                        setTimeout(function() {
                            var alertMessage = document.getElementById('alertMessage');
                            alertMessage.style.display = 'none';
                            alertMessage.remove();
                        }, 4000);
                    </script>

                }
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - inmobiliariaBaigorriaDiaz - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
