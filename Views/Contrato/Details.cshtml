@model inmobiliariaBaigorriaDiaz.Models.Contrato

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdContrato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class = "col-sm-2">
            <span>Inquilino</span>
        </dt>
        <dd class = "col-sm-10">
            @(Model.Inquilino.ToString())
        </dd>
        <dt class = "col-sm-2">
            <span>Direcci√≥n del inmueble</span>
        </dt>
        <dd class = "col-sm-10">
            @(Model.Inmueble.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlquilerDesde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlquilerDesde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlquilerHasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlquilerHasta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @if (!Model.Estado)
            {
                <span>No</span>
            }
            else
            {
                <span>Si</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.IdContrato })" class="btn btn-primary btn-editar" style="margin-right: 30px;">Editar</a>
    <button type="button" onclick="window.location.href='@Url.Action("Index", "Contrato")'" class="btn btn-outline-warning" style="font-weight: bold; border-width: 2px;"> Volver a la Lista</button>
</div>
