@model IEnumerable<inmobiliariaBaigorriaDiaz.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center"><u>Lista de Propietarios</u></h1>

<p>
    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Create")'">Alta</button>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="centered-row">
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @if(item.Estado){
                        @Html.Label("Alta")
                    } else {
                        @Html.Label("Baja")   
                    }
                </td>
                <td>
                    <span class="button-column">
                        <a href="@Url.Action("Edit", new { id = item.IdPropietario })" title="Editar"> <i
                                class="fas fa-edit custom-color"></i></a>
                        |
                        <a href="@Url.Action("Details", new { id = item.IdPropietario })" title="Detalles"> <i
                                class="fas fa-info-circle"></i></a>
                        |
                        <a href="@Url.Action("Delete", new { id = item.IdPropietario })" title="Eliminar"> <i
                                class="fas fa-trash-alt text-danger"></i></a>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
