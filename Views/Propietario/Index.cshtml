@model IEnumerable<inmobiliariaBaigorriaDiaz.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                @if (item.Telefono.Equals(""))
                {
                    <td>
                        No declarado
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                }
                @if (item.Email.Equals(""))
                {
                    <td>
                        No declarado
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdPropietario }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdPropietario }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPropietario })
                </td>
            </tr>
        }
    </tbody>
</table>
