@model inmobiliariaBaigorriaDiaz.Models.Inquilino

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>DETALLE DEL INQUILINO</b></h1>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DNI)
                        </dt>
                        <dd class="col-sm-10 text-center">
                            @Html.DisplayFor(model => model.DNI)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellido)
                        </dt>
                        <dd class="col-sm-10 text-center">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10 text-center">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>
                        <dd class="col-sm-8 text-center">
                            @if (Model.Telefono != null)
                            {
                                @Html.DisplayFor(model => model.Telefono)
                            }
                            else
                            {
                                <text>No declarado</text>
                            }
                        </dd>
                        <dd class="col-sm-1"></dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10 text-center">
                            @if (Model.Email != null)
                            {
                                @Html.DisplayFor(model => model.Email)
                            }
                            else
                            {
                                <text>No declarado</text>
                            }
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-4 text-center">
                            @if (Model.Estado)
                            {
                                @Html.Label("Alta")
                            }
                            else
                            {
                                @Html.Label("Baja")
                            }
                        </dd>
                        <dd class="col-sm-3"></dd>
                        <dt class="col-sm-12"></dt>
                    </dl>
                    <div class="text-center mt-3"> <!-- Agrega margen superior aquÃ­ -->
                        <a href="@Url.Action("Edit", new { id = Model.IdInquilino })"
                            class="btn btn-primary btn-editar" style="margin-right: 30px;">Editar</a>
                        <button type="button" onclick="window.location.href='@Url.Action("Index", "Inquilino")'"
                            class="btn btn-outline-warning" style="font-weight: bold; border-width: 2px;"> Volver a la
                            Lista</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>