@model inmobiliariaBaigorriaDiaz.Models.Usuario

@{
	ViewData["Title"] = "Alta";
}

<div class="container mt-3">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h1 class="text-center"><b>ALTA DEL USUARIO</b></h1>
					<h2 class="text-center">¿Está seguro que desea dar de alta de nuevo al siguiente usuario?</h2>
					<hr />
					<dl class="row">
						<dt class="col-sm-4">
							@Html.DisplayNameFor(model => model.IdUsuario)
						</dt>
						<dd class="col-sm-8">
							@Html.DisplayFor(model => model.IdUsuario)
						</dd>
						<dt class="col-sm-4">
							@Html.DisplayNameFor(model => model.Apellido)
						</dt>
						<dd class="col-sm-8">
							@Html.DisplayFor(model => model.Apellido)
						</dd>
						<dt class="col-sm-4">
							@Html.DisplayNameFor(model => model.Nombre)
						</dt>
						<dd class="col-sm-8">
							@Html.DisplayFor(model => model.Nombre)
						</dd>
						<dt class="col-sm-4">
							@Html.DisplayNameFor(model => model.Email)
						</dt>
						<dd class="col-sm-8">
							@Html.DisplayFor(model => model.Email)
						</dd>
						<dt class="col-sm-4">
							@Html.DisplayNameFor(model => model.RolNombre)
						</dt>
						<dd class="col-sm-8">
							@Html.DisplayFor(model => model.RolNombre)
						</dd>
						<dt class="col-sm-4">
							@Html.DisplayNameFor(model => model.Estado)
						</dt>
						<dd class="col-sm-8">
							@if (Model.Estado)
							{
								@Html.Label("Alta")
							}
							else
							{
								@Html.Label("Baja")
							}
						</dd>
						<dd class="col-sm-12"></dd>
					</dl>
					<div class="text-center">
						<form asp-action="Alta">
							<input type="submit" value="Alta" class="btn btn-success" style="margin-right: 30px;" />
							<button type="button" onclick="window.location.href='@Url.Action("Index", "Usuario")'"
								class="btn btn-outline-warning" style="font-weight: bold; border-width: 2px;"> Volver a
								la
								Lista</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>