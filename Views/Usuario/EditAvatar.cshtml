@model inmobiliariaBaigorriaDiaz.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>ACTUALIZACIÃ“N DE USUARIO</b></h1>
                    <hr />
                    <dl class="row">
						<form asp-action="EditAvatar" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="form-group">
								<label asp-for="AvatarFile" class="control-label"></label>
								<br>
								<input type="file" asp-for="AvatarFile" accept="image/*" class="form-control-file" />
								<span asp-validation-for="AvatarFile" class="text-danger"></span>
							</div>
                            <br>
                            <div class="form-group text-center">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-guardar"
                                    style="margin-right: 30px;" />
                                <button type="button"
                                    onclick="window.location.href='@Url.Action("Index", "Usuario")'"
                                    class="btn btn-outline-warning" style="font-weight: bold; border-width: 2px;">
                                    Volver a la
                                    Lista</button>
                            </div>
                        </form>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>